@model RCTH.Models.ViewModels.ArticleListViewModel;
@{
    this.ViewData["Title"] = "All Blog Articles ";
}

<ul class="home-articles-list">
    @foreach (var article in this.Model.Articles)
    { 
    <li>
        <h3>
            @article.Title
        </h3>
        <p>@article.ShortContent</p>
        <p>@article.AuthorName</p>

        <a asp-controller="Articles" asp-action="ById" asp-route-id="@article.Id">Details</a>
    </li>
    }
</ul>

